<div class="overlay" {{action "cancel"}}> 
</div>
<div class="modal-dialog">
      {{#if model.id}}
        <h3 class="flush--top">Edit Person</h5><hr>
        <p>{{input value=model.name autofocus="autofocus"}}</p>
        <p>{{input value=model.nick}}</p>
        <p>{{input value=model.description}}</p>
        <button {{action "close" this}}>Save</button>
      {{else}}
          <h3 class="flush--top">Add Person</h5><hr>
          {{!-- <form {{action close this on="submit"}}> --}}
          <p>{{input value=model.name placeholder="Name" autofocus="autofocus"}}</p>
          <p>{{input value=model.nick placeholder="Nick Name"}}</p>
          <p>{{input value=model.description placeholder="Description"}}</p>
          <button {{action "close"}}>Add</button>
          <button {{action "cancel"}}>Cancel</button>
          {{!-- </form> --}}
      {{/if}}
</div>