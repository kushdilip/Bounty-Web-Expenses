<div id="operation-btn" class="btn-group">
	<button {{action 'openModal' 'member-modal'}} class="btn btn-default btn-sm">Add Person[+]</button>
    <button class="btn btn-default btn-sm" disabled="true">Delete Selected</button>
    <button class="btn btn-default btn-sm">Enter Expenses ></button>
</div>
<br><br>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th><button type="button" class="btn btn-link btn-xs">all</button></th>
				<th>#</th>
				<th>Person Name</th>
				<th>Display Name</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
			{{#each person in model}}
				<tr>
					<td>{{input type="checkbox"}}</td>
					<td><button {{action 'openModal' 'member-modal' person}} class="btn btn-default btn-xs">edit</button></td>
					<td>{{person.name}}</td>
					<td>{{person.nick}}</td>
					<td>{{person.description}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>